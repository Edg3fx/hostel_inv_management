<!DOCTYPE html>
<html lang="en">



<%- include('view-partials/head') %>

<body>

  
    <div class="main-wrapper">
        <%- include('./view-partials/header') -%>
        <%- include('./view-partials/sidebar') %>

        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Create Request</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <form method="POST">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
										<label>Room No </label>
                                        <input class="form-control" maxlength="4" type="text" name="room_no" required>									</div>
                                </div>
                               
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Resource</label>
                                        <select class="" name="resource_id" style="padding: 5px 20px; border-radius: 4px;">
                                            
                                            <option value="1">Table</option>
                                            <option value="2">Chair</option>
                                            <option value="3">Fan</option>
                                            <option value="4">Tube Light</option>
                                            <option value="5">Bed</option>
                                            <option value="6">Cupboard</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Student Roll Number</label>
                                        <input type="text" minlength="8" maxlength="8" name="student_id" id="" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Request Date</label>
                                        <div>
                                            <input type="text" placeholder="yyyy-mm-dd" name="request_date" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Quantity</label>
                                        <div class="">
                                            <input type="number" form-control" id="" name="quantity" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary submit-btn">Create Request</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
			
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
	<script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/select2.min.js"></script>
	<script src="/assets/js/moment.min.js"></script>
	<script src="/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/assets/js/app.js"></script>
	<script>
            $(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'LT'

                });
            });
     </script>
</body>


